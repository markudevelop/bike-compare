---
import Layout from "../layouts/Layout.astro";
import BikeSelector from "../components/BikeSelector";

async function fetchBikes() {
  return new Promise((resolve) => {
    setTimeout(() => {
      resolve(import("../data/bikes.json"));
    }, 2000);
  });
}

const bikes = (await fetchBikes()).default;
const title = "Bike Comparison Dashboard";
---

<Layout title={title}>
  <main>
    <h1 class="text-4xl font-bold text-center mb-6 text-white mt-10">
      {title}
    </h1>
    <BikeSelector bikes={bikes} client:load />
  </main>
</Layout>
